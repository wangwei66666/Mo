<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ww.module_study.StudyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_12"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_lifecycle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_48"
            android:text="Lifecycle"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_lifecycle_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_48"
            android:text="LifecycleService"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_process_lifecycle_owner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_48"
            android:text="ProcessLifecycleOwner"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@color/purple_500" />

        <Button
            android:id="@+id/btn_viewmodel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lay_48"
            android:text="ViewModel"
            android:textAllCaps="false" />


    </LinearLayout>
</ScrollView>